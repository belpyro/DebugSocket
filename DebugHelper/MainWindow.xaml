<Window x:Class="DebugHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".6*"/>
            <ColumnDefinition Width=".4*"/>
            <!--<ColumnDefinition Width="Auto"/>-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="CompleteBox" TextChanged="CompleteBox_OnTextChanged"/>

        <TreeView Grid.Row="1" Grid.Column="0" Name="TypeTree"/>
        
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
            <Rectangle Fill="Firebrick" Margin="4" Width="24" Height="16"></Rectangle>
            <TextBlock Text="Type" VerticalAlignment="Center"></TextBlock>
            <Rectangle Fill="CornflowerBlue" Margin="4" Width="24" Height="16"></Rectangle>
            <TextBlock Text="Field" VerticalAlignment="Center"></TextBlock>
            <Rectangle Fill="DarkGreen" Margin="4" Width="24" Height="16"></Rectangle>
            <TextBlock Text="Property" VerticalAlignment="Center"></TextBlock>
            <Rectangle Fill="DarkOrange" Margin="4" Width="24" Height="16"></Rectangle>
            <TextBlock Text="Collection" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" MaxHeight="40">
            <TextBlock Text="{Binding ElementName=TypeTree, Path=SelectedItem.Header}" Margin="4" VerticalAlignment="Center"/>
            <TextBox Text="{Binding SelectedValue, Mode=TwoWay}" MinWidth="160" Margin="4"/>
            <Button Content="Set" Name="SetButton" Click="SetButton_OnClick" Margin="4" MinWidth="60"></Button>
        </StackPanel>
        
